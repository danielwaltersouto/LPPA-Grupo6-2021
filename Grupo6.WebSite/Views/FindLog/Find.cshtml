@using Grupo6.Services
@model Logger

@{

    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}


<head>
    <link href="~/Content/LogIn/EstiloLogin.css" rel="stylesheet" />

</head>


<div class="container">

    <div class="row">
        <div class="col-md-5 mx-auto">

            <div class="myform form ">
                <div class="logo mb-3">
                    <div class="col-md-12 text-center">


                        <h1>Buscar Log</h1>
                        <img src="~/Content/User/bug-fill.svg" width="50" height="50" />
                        <br />
                        <hr />
                    </div>
                </div>

                @using (Html.BeginForm())
                {


                    <div class="form-horizontal">


                        <div class="form-group">
                            <span>
                                <img src="~/Content/User/calendar.svg" />
                            </span>
                            @Html.LabelFor(model => model.Date, htmlAttributes: new { @class = "control-label col-md-6" })
                            <div class="col-md-10">

                                @Html.EditorFor(model => model.Date, new { htmlAttributes = new { @class = "form-control datepicker", Value = DateTime.Now.ToShortDateString(), @type = "date" } })
                                @Html.ValidationMessageFor(model => model.Date, "", new { @class = "text-danger" })
                            </div>
                        </div>



                        <br />
                        <hr />

                        <div class="col-md-12 text-center ">
                            @ViewBag.Mensaje
                            <button type="submit" class=" btn btn-block mybtn btn-primary tx-tfm">Buscar</button>
                        </div>
                    </div>
                }

                <hr />
                <div>
                    <span>
                        <img src="~/Content/User/box-arrow-in-left.svg" />
                    </span>
                    <a href="/Home/Index">Regresar</a>
                </div>
            </div>
        </div>
    </div>






</div>









